<odoo>
  <data>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="product_list_items">
      <field name="name">Produits</field>
      <field name="res_model">product.template</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- menus -->

    <menuitem id="realtor.menu_root" name="Appartement">
      <menuitem id="show_menu_parent" name="Afficher">
        <!-- actions -->
        <menuitem id="show_products" name="Les produits" action="product_list_items"/>
      </menuitem>
    </menuitem>
  </data>
</odoo>