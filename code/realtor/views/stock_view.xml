<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="realtor.stock_view_type" model="ir.ui.view">
        <field name="name">stock.inventory.form</field> <!-- Ceci est pour utiliser la vue proposée par Odoo -->
        <!-- "priority" se réfère à "sequence" dans la vue interface web d'Odoo. pour utiliser notre propre vue (qui est ce fichier), il suffit de diminuer ce nb de 1 -->
        <field name="priority">15</field>
        <field name="model">stock.inventory</field>
        <field name="arch" type="xml">
            <form string="Stocks">
                <sheet>
                    <group>
                        <field name="line_ids" invisible="1"/>
                        <field name="name" default="Nom du stock"/>
                        <field name="product_ids" string="Produits associés au stock" />
                        <field name="state" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>